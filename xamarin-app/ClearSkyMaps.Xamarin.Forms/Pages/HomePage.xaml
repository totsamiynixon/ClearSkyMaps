<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClearSkyMaps.Xamarin.Forms.Pages.HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Details" Clicked="IconToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Home Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="To Tabs" Clicked="IconToolbarItem_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>