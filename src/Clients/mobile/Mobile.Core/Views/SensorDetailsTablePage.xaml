<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Mobile.Core.Views.SensorDetailsTablePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ActivityIndicator  x:Name="Loading" WidthRequest="110" HeightRequest="70" IsRunning="True" IsVisible="True" Color="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                <TableView x:Name="Table"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>