@using Web.Areas.Admin.Models.Sensors
@using Web.Extensions;
@using Web.Helpers;
@model List<SensorListItemViewModel>
@{
    ViewBag.Title = "Датчики";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "page-sensors";
}
<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-map-tab" data-toggle="pill" href="#pills-map" role="tab" aria-controls="pills-map" aria-selected="true">Карта</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-table-tab" data-toggle="pill" href="#pills-table" role="tab" aria-controls="pills-table" aria-selected="false">Таблица</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-map" role="tabpanel" aria-labelledby="pills-map-tab">
                <div class="map-holder">
                    <div id="map"></div>
                </div>
                <div class="dropdown-menu dropdown-menu-right" id="mapDropdownTemplate">
                    <a class="dropdown-item" data-edit-button data-href="sensors/edit">Редактировать</a>
                    <a class="dropdown-item" data-change-activation-button data-href="sensors/changeActivation">Активировать<br />/Деактивировать</a>
                    <a class="dropdown-item" data-change-visbility-button data-href="sensors/changeVisibility">Показать/<br />Скрыть</a>
                    <a class="dropdown-item" data-delete-button data-href="sensors/delete">Удалить</a>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-table" role="tabpanel" aria-labelledby="pills-table-tab">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            IP адресс
                                        </th>
                                        <th>
                                            Видимость
                                        </th>
                                        <th>
                                            Статус
                                        </th>
                                        <th>
                                            Тип
                                        </th>
                                        <th>
                                            Действия
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sensor in Model)
                                    {
                                        <tr>
                                            <td>
                                                @sensor.Id
                                            </td>
                                            <td>
                                                @sensor.IPAddress
                                            </td>
                                            <td>
                                                @(sensor.IsVisible ? "Видимый" : "Скрыт")
                                            </td>
                                            <td>
                                                @(sensor.IsActive ? "Активен" : "Деактивирован")
                                            </td>
                                            <td>
                                                @(Enum.GetName(typeof(Web.Enum.SensorType), sensor.Type))
                                            </td>
                                            <td>
                                                <a class="dropdown-toggle" href="javascript:void(0);" id="edit_button_@sensor.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <p>
                                                        <span class="d-lg-none d-md-block">Дейсвтия</span>
                                                    </p>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right sensor-actions" aria-labelledby="edit_button_@sensor.Id">
                                                    <a class="dropdown-item" href="sensors/edit?sensorId=@(sensor.Id)">Редактировать</a>
                                                    <a class="dropdown-item" href="sensors/changeActivation?sensorId=@(sensor.Id)">Активировать/Деактивировать</a>
                                                    <a class="dropdown-item" href="sensors/changeVisibility?sensorId=@(sensor.Id)">Показать/скрыть</a>
                                                    <a class="dropdown-item" href="sensors/delete?sensorId=@(sensor.Id)">Удалить</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="sensors/create" class="btn btn-default">Зарегестрировать</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!--  Yandex Maps Plugin    -->
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=@(SettingsHelper.YandexMapsJavaScriptAPIKey)" type="text/javascript"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Areas/Admin/Scripts/front/pages/sensors.js"></script>
    <script>
        jQuery(function ($) {
            window.CSM_Admin.getModule("Sensors")({
                sensors: @Html.ToJson(Model.Where(f=>f.Type == Web.Enum.SensorType.Static).ToList())
            })
        });
    </script>
}