@using Web.Areas.Admin.Models.Sensors
@model SensorDetailsViewModel
<div class="card">
    <div class="card-body">
        <div class="list-group">
            <a href="javascript:void(0);" class="list-group-item list-group-item-action flex-column align-items-star">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Html.NameFor(s => s.IPAddress)</h5>
                </div>
                <p class="mb-1">@Model.IPAddress</p>
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Токен для трекинга</h5>
                    <small class="text-muted">Никому его не разглашайте!</small>
                </div>
                <p class="mb-1">@Model.TrackingKey</p>
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Видимость</h5>
                </div>
                <p class="mb-1">@(Model.IsVisible ? "Видим" : "Скрыт")</p>
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Активность</h5>
                </div>
                <p class="mb-1">@(Model.IsVisible ? "Активен" : "Деактивирован")</p>
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Тип</h5>
                </div>
                <p class="mb-1">@(Enum.GetName(typeof(Web.Enum.SensorType), Model.Type))</p>
            </a>
        </div>
    </div>
</div>