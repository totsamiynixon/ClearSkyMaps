@using Web.Helpers;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/Areas/Admin/Content/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Areas/Admin/Content/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Areas/Admin/Content/img/favicon/favicon-16x16.png">
    <link rel="mask-icon" href="~/Areas/Admin/Content/img/favicon/safari-pinned-tab.svg" color="#0f5a70">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        CSM Admin
    </title>
    <base href="@Url.Content("~/admin/")" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/bundles/admin/css")
    @RenderSection("Styles", false)
</head>

<body class="@ViewBag.Page">
    <div class="wrapper ">
        @Html.Partial("_Partials/Sidebar")
        <div class="main-panel">
            @Html.Partial("_Partials/Navbar")
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
    <!--  Yandex Maps Plugin    -->
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=@(SettingsHelper.YandexMapsJavaScriptAPIKey)" type="text/javascript"></script>
    @Scripts.Render("~/bundles/admin/js")
    @RenderSection("Scripts", false)
    @Html.Partial("_Partials/Alerts")
</body>

</html>